#:kivy 1.0.9

<IntroLabel>:
    text: "Welcome to Machine Translations! This is a machine translation tool for manwha, manhua, and manga. I hope this is helpful!"
    font_size : 20
    font_name: "WildWords"
    text_size: cm(15), cm(4)
    halign: 'center'
    


<FolderButton>:
    size_hint: 4, 4
    text: "Select a Folder"
    font_size: 20
    size: 200, 100

<UI>:
    folderButton: folder_button
    authorLabel: author_label

    AuthorLabel: 
        id: author_label
        center: self.parent.center_x,  100

    IntroLabel: 
        id: introText
        center: self.parent.center_x , 600
        size: 1000 , 1000

    FolderButton: 
        gif: gify
        id: folder_button
        center: self.parent.center_x, 200
        Image:
            id: gify
            source: 'cover.gif'
            center: self.parent.parent.center
            size: 200, 200
            allow_stretch: "True"
            anim_delay: .1
            keep_data: "True"



    